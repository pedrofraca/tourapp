<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_tour_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/item_tour_stage_image"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="160dp"
                    android:src="@drawable/stage1"/>
                <View android:layout_width="match_parent"
                    android:id="@+id/item_tour_shadow"
                    android:layout_height="match_parent"
                    android:background="#60000000"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/item_tour_leader_board"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:background="@color/color_accent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_winner"
                        android:textSize="12dp"
                        android:layout_margin="3dp"
                        android:textColor="@android:color/black"
                        android:text="Winner:Cancellara"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_leader"
                        android:textSize="12dp"
                        android:layout_margin="3dp"
                        android:textColor="@android:color/black"
                        android:text="Leader:Contador"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/color_primary"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_title"
                        android:textSize="15dp"
                        android:layout_margin="3dp"
                        android:textColor="@android:color/black"
                        android:text="Amber-Amber"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_km"
                        android:textSize="15dp"
                        android:layout_margin="3dp"
                        android:textColor="@android:color/black"
                        android:text="180km"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>