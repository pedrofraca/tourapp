<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_tour_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/item_tour_stage_image"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:tint="#22000000"
                    android:src="@drawable/stage1"/>
                <ImageView
                    android:id="@+id/item_tour_stage_done_icon"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/color_primary_dark"
                    android:src="@drawable/ic_check"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/item_tour_leader_board"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:background="@color/color_accent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_winner"
                        android:textSize="12dp"
                        android:layout_margin="3dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark_gray"
                        android:text="Winner:Cancellara"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_leader"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_margin="3dp"
                        android:textColor="@color/text_dark_gray"
                        android:text="Leader:Contador"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/color_primary"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_title"
                        android:textSize="15dp"
                        android:layout_margin="3dp"
                        android:textColor="@color/text_dark_gray"
                        android:text="Amber-Amber"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_tour_stage_km"
                        android:textSize="15dp"
                        android:layout_margin="3dp"
                        android:textColor="@color/text_dark_gray"
                        android:text="180km"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>