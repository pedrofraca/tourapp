<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.pedrofraca.tourapp" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <application
        android:networkSecurityConfig="@xml/network"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.TourApp" >

        <activity
            android:name=".stage.StageActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".stage.StageActivity"></activity>
        <activity android:name=".activity.FullScreenImagesActivity"
            android:parentActivityName=".activity.DetailActivity"></activity>
        <activity android:name=".activity.ClasificationActivity"
            android:parentActivityName=".activity.DetailActivity"></activity>


    </application>

</manifest>
